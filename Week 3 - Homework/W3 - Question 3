# Question 3

class MyStack:
    def __init__(self, capacity):
        self.__capacity = capacity
        self.__stack = []
        print(f"Create a stack with capacity is {capacity}")

    def is_empty(self):
        if len(self.__stack) == 0:
            return True
        else:
            return False

    def is_full(self):
        if len(self.__stack) == self.__capacity:
            return True
        else:
            return False

    def pop(self):
        if self.is_empty() == True:
            return print("This stack is empty.")
        else:
            return print(f"Deleted value :{self.__stack.pop()}")

    def push(self, value):
        if self.is_full():
            return print("This stack is full.")
        else:
            self.__stack.append(value)
            print(f"Add value = {value} successful")

    def top(self):
        if self.is_empty():
            return print("This stack is empty")
        else:
            return print(f"Top value in stack :{self.__stack[-1]}")


# Create a stack with capacity is 10.
stack1 = MyStack(capacity=4)

# Checking a stack is empty.
stack1.is_empty()

# Checking a stack is full.
stack1.is_full()

# Adding value to a stack.
stack1.push(6)
stack1.push(7)
stack1.push(8)
stack1.push(9)

# Delele last value of a stack.
stack1.pop()

# Get top value of a stack.
stack1.top()
